<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="example.hp.nitjplacements.prhome">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/allcompanies"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="30dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonborder"
            android:elevation="8dp"
            android:gravity="center"
            android:text="LIST OF ALL COMPANIES"
            android:textSize="16dp" />

        <Button
            android:id="@+id/prupcomingcompanies"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonborder"
            android:elevation="8dp"
            android:gravity="center"
            android:text="UPCOMING COMPANIES"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/studentzone"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="30dp"

            android:background="@drawable/buttonborder"
            android:elevation="8dp"
            android:gravity="center"
            android:text="STUDENT ZONE"
            android:textSize="16dp" />

        <Button
            android:id="@+id/chatroom"
            android:layout_width="140dp"
            android:layout_height="140dp"

            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttonborder"
            android:elevation="8dp"
            android:gravity="center"
            android:text="CHAT ROOM"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <Button
        android:id="@+id/prpreviouscompanies"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"

        android:background="@drawable/buttonborder"
        android:elevation="8dp"
        android:gravity="center"
        android:text="VISITED COMPANIES"
        android:textSize="16dp" />



</LinearLayout>
</LinearLayout>
